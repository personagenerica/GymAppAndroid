<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Fecha Inicio -->
        <EditText
            android:id="@+id/etFechaInicio"
            android:hint="Fecha Inicio (YYYY-MM-DD)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Hora Inicio -->
        <EditText
            android:id="@+id/etHoraInicio"
            android:hint="Hora Inicio (HH:MM)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Fecha Fin -->
        <EditText
            android:id="@+id/etFechaFin"
            android:hint="Fecha Fin (YYYY-MM-DD)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Hora Fin -->
        <EditText
            android:id="@+id/etHoraFin"
            android:hint="Hora Fin (HH:MM)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Aforo -->
        <EditText
            android:id="@+id/etAforo"
            android:hint="Aforo máximo"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Botón -->
        <Button
            android:id="@+id/btnCrearClase"
            android:text="Crear Clase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>